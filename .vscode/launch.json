    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build & Launch Editor 2DPlatformer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../godot/bin/godot.macos.editor.arm64",
            "args": ["-e", "--path", "${workspaceFolder}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "lldb",
            "preLaunchTask": "build godot cpp"
        },
        {
            "name": "Build & Launch Game 2DPlatformer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../godot/bin/godot.macos.editor.arm64",
            "args": ["--path", "${workspaceFolder}", "src/main.tscn"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "lldb",
            "preLaunchTask": "build godot cpp"
        }
    ]
}